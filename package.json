{
  "name": "drivelah-admin-bff",
  "version": "1.0.0",
  "description": "Backend for Frontend (BFF) service for Drivelah Admin Portal",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "node --max-old-space-size=4096 ./node_modules/.bin/tsc --noEmitOnError false && echo 'Build completed successfully' && ls -la dist/",
    "start": "node dist/server.js",
    "start:dev": "ts-node src/server.ts",
    "sync-google": "node --max-old-space-size=2048 -r ts-node/register scripts/sync-from-google.ts",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "type-check": "node --max-old-space-size=4096 ./node_modules/.bin/tsc --noEmit",
    "render-build": "npm install --production=false",
    "render-start": "./node_modules/.bin/ts-node src/server.ts",
    "heroku-postbuild": "npm run build"
  },
  "keywords": [
    "drivelah",
    "admin",
    "bff",
    "backend-for-frontend",
    "express",
    "typescript"
  ],
  "author": "Drivelah Team",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.4",
    "geoip-lite": "^1.4.10",
    "googleapis": "^160.0.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "joi": "^17.11.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

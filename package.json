{
  "name": "drivelah-admin-bff",
  "version": "1.0.0",
  "description": "Backend for Frontend (BFF) service for Drivelah Admin Portal",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && echo 'Build completed successfully' && ls -la dist/",
    "start": "node dist/server.js",
    "start:dev": "ts-node src/server.ts",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "render-build": "echo 'Skipping TypeScript compilation, using ts-node instead'",
    "render-start": "./node_modules/.bin/ts-node src/server.ts",
    "heroku-postbuild": "npm run build",
    "postinstall": "echo 'Dependencies installed, running build...' && npm run build"
  },
  "keywords": [
    "drivelah",
    "admin",
    "bff",
    "backend-for-frontend",
    "express",
    "typescript"
  ],
  "author": "Drivelah Team",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "http-proxy-middleware": "^2.0.6",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/joi": "^17.2.3",
    "ts-node": "^3.3.0"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}